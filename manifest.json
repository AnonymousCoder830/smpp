{

  "description": "An extension to make the smartschool better",
  "manifest_version": 2,
  "name": "sm++",
  "version": "1.0",
  "homepage_url": "https://github.com/Xgames123/smpp",


  "content_scripts": [
    {
      "matches": ["*://*.smartschool.be/*"],
      "all_frames": true,
      "css": ["smpp.css"],
      "js": ["smppjs.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Click here to open menu",
    "default_popup": "popup.html"
  }

}
